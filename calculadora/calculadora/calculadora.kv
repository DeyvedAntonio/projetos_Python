<Home>:
    orientation: 'vertical'
    Label:
        id: saida
        size_hint_y: None
        height: 45
        color: 0, 0, 0, 1
    Label:
        id: entrada
        size_hint_y: None
        color: 0, 0, 0, 1
        height: 45

    GridLayout:
        cols: 4
        padding: 10, 10, 10, 10
        spacing: 10, 10
        Button:
            text: 'AC'
        Button:
            text: 'C'
        Button:
            text: '+/-'
        Button:
            text: '/'
        Button:
            text: '7'
            on_release: root.digito(7)
        Button:
            text: '8'
            on_release: root.digito(8)
        Button:
            text: '9'
            on_release: root.digito(9)
        Button:
            text: '*'
        Button:
            text: '4'
            on_release: root.digito(4)
        Button:
            text: '5'
            on_release: root.digito(5)
        Button:
            text: '6'
            on_release: root.digito(6)
        Button:
            text: '-'
        Button:
            text: '1'
            on_release: root.digito(1)
        Button:
            text: '2'
            on_release: root.digito(2)
        Button:
            text: '3'
            on_release: root.digito(3)
        Button:
            text: '+'
        Button:
            text: '...'
        Button:
            text: '0'
            on_release: root.digito(0)
        Button:
            text: '.'
        Button:
            text: '='
